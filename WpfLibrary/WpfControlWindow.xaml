<Window x:Class="WpfLibrary.WpfControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLibrary"
        xmlns:wpg="clr-namespace:System.Windows.Controls"
        mc:Ignorable="d" ResizeMode="CanResizeWithGrip"
        Title="Controls"
        Width="900" Height="360" MinWidth="360" MinHeight="400"
        WindowStartupLocation="Manual"
        Left="10" Top="10">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <wpg:WpfPropertyGrid x:Name="PropertyGrid1" Grid.Column="0" ToolbarVisible="False" HelpVisible="False" PropertySort="Categorized"/>
        <wpg:WpfPropertyGrid x:Name="PropertyGrid2" Grid.Column="1" ToolbarVisible="False" HelpVisible="False" PropertySort="Categorized"/>
        <wpg:WpfPropertyGrid x:Name="PropertyGrid3" Grid.Column="2" ToolbarVisible="False" HelpVisible="False" PropertySort="Categorized"/>

        <GridSplitter Grid.Column="0" Width="4"
                HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
    </Grid>

</Window>